<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="@dimen/margin_top_edit_box"
    android:layout_marginBottom="@dimen/margin_left_right"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/hotel_id"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_margin="@dimen/margin_top_edit_box"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="রেডিসন ব্লু (Radison Blue)"
                android:textColor="@color/black"
                android:textSize="@dimen/regular_size_S"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobile"
                android:text="09612-600800"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/hotel_address"
                android:text="শহীদ সাইফুদ্দিন খালেদ রোড, চট্টগ্রাম - ৪৪০০"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>